<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:restaurant.Pages"
            x:Class="restaurant.Homepage">
  <!--Pages can be added as references or inline-->
    <TabbedPage.Children>
        <NavigationPage Title="Meals" IconImageSource="icon1.png">
            <x:Arguments>
                <local:MealPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Recipies" IconImageSource="icon2.png">
            <x:Arguments>
                <local:CategoriesPage />
            </x:Arguments>
        </NavigationPage>
      
    </TabbedPage.Children>
</TabbedPage>